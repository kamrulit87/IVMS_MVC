<div ng-controller="reportsController" ng-init="loadDropdowns()">
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                VISITOR IN-OUT
            </div>
        </div>

        <div class="panel-body certificate">
            <div class="row form-horizontal xl-mlr10">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                    <div class="form-group hidden">
                        <div class="form-inner13">
                            <label class="left-col control-label">Company</label>
                            <div class="right-col">
                                <div>
                                    <select2 style="width: 100%;" ng-model="inOut.CompanyID"
                                             s2-options="work.CompanyID as work.Name for work in companyList"
                                             readonly>
                                    </select2>
                                </div>
                                <div class="clr"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group hidden">
                        <div class="form-inner13">
                            <label class="left-col control-label">Branch</label>
                            <div class="right-col">
                                <select2 style="width: 100%;" ng-model="inOut.BranchID"
                                         s2-options="leave.BranchID as leave.Name for leave in branchList" readonly>
                                </select2>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label for="ExpertiseAreaName" class="left-col control-label">From Date</label>
                            <div class="right-col">
                                <div id="datepicker-component" class="input-group date">
                                    <input type="text" class="form-control date_picker1" ng-model="inOut.FDate" required>
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label for="ExpertiseAreaName" class="left-col control-label">To Date</label>
                            <div class="right-col">
                                <div id="datepicker-component" class="input-group date">
                                    <input type="text" class="form-control date_picker1" ng-model="inOut.TDate" required>
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label for="DepartmentName" class="left-col control-label">Department</label>
                            <div class="right-col">
                                <select2 style="width: 100%;" ng-model="inOut.DepartmentID" s2-options="emp.DepartmentID as emp.DepartmentName for emp in deptList" ng-change="deptWiseEmployee(inOut.DepartmentID);getDeptName(inOut.DepartmentID)"
                                         placeholder="Select Department">
                                </select2>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Employee </label>
                            <div class="right-col">
                                <div>
                                    <select2 style="width: 100%;" ng-model="inOut.EmployeeID"
                                             s2-options="emp.EmployeeID as emp.EmpName for emp in employeeList"
                                             placeholder="Select Employee" ng-change="getEmpName(inOut.EmployeeID)">
                                    </select2>
                                </div>
                                <div class="clr"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="form-inner12">
                            <div class=" mt-org1" style="text-align: right; float: right; margin-bottom: 10px; margin-top: 0px;">
                                <button type="button" class="btn btn-primary" name="Submit" data-ng-click="visitorINOutReport()">View Report</button>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>


</div>
<script>
    $(".date_picker1").datepicker({
        changeMonth: true,
        autoclose: true,
        changeYear: true
    });
</script>


