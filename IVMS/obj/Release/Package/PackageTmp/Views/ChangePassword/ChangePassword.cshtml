<div class="panel panel-transparent">
    <div class="panel-heading">
        <div class="panel-title">
            Change Password
        </div>
    </div>

    <div class="panel-body" ng-controller="changePasswordController">
        <div class="row form-horizontal xl-mlr10">
            <form name="SelfChangePasswordForm">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                            <div class="form-group">
                                <div class="form-inner13">
                                    <label for="Name" class="left-col control-label">Old Password</label>
                                    <div class="right-col">
                                        <input type="password" class="form-control" ng-minlength="6" ng-model="changePassword.OldPassword" required placeholder="Old Password" />
                                    </div>

                                    <div class="clr"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inner13">
                                    <label for="Name" class="left-col control-label">New Password</label>
                                    <div class="right-col">
                                        <input type="password" class="form-control" ng-model="changePassword.NewPassword" ng-minlength="6" required placeholder="New Password" />
                                    </div>
                                    <div class="clr"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inner13">
                                    <label class="left-col control-label">Confirm Password</label>
                                    <div class="right-col">
                                        <input type="password" class="form-control" ng-model="changePassword.ConfirmPassword" ng-minlength="6" required placeholder="Confirm Password" ng-change="passwordCheck()" />

                                    </div>
                                    <div class="clr"></div>
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-bottom:40px;text-align:right">
                            <div class="form-group">
                                <div class="form-inner12">
                                    <label for="fname" class="left-col control-label"></label>
                                    <div class="right-col mt-org1">
                                        <button type="button" class="btn btn-success custom-btn1 " name="Submit" ng-click="ChangePassword()">Submit</button>
                                        <button type="button" class="btn btn-default custom-btn1" name="Clear" ng-click="Reload()"><i class="pg-close"></i> Clear</button>
                                    </div>
                                    <div class="clr"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


