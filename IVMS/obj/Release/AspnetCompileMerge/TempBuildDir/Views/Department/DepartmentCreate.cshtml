@{
    ViewBag.Title = "Department";
    if (ViewBag.CallingForm1 == "index")
    {
    }
    else
    {
        <ul class="breadcrumb">
            <li><a href="#">@ViewBag.CallingForm</a></li>
            <li><a href="@ViewBag.CallingViewPage" class="active">@ViewBag.CallingForm1</a></li>
            @if (@ViewBag.CallingForm2 != null)
            {
                <li><a href="#" class="active">@ViewBag.CallingForm2</a></li>
            }
        </ul>
    }
}
<div class="panel panel-transparent">
    <div class="panel-heading">
        <div class="panel-title">
            Department
        </div>
    </div>
    <div class="panel-body">
        <div class="row form-horizontal xl-mlr10" ng-controller="departmentController">
            <form name="deptForm" ng-init="loadDropdown()">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                    <input class="form-control in-ctrl hidden" ng-model="dept.DepartmentID" type="text" ng-init="LoadDefault()">

                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Department Name</label>
                            <div class="right-col">
                                <input type="text" ng-model="dept.DepartmentName" class="form-control" placeholder="DepartmentName" required />
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <div class="form-inner12">
                                    <label for="fname" class="left-col control-label"></label>
                                    <div class="right-col mt-org1" style="text-align:right">
                                        <button class="btn btn-success custom-btn1" name="Submit" type="button" data-ng-click="saveDept()">Submit</button>
                                        <button type="button" class="btn btn-default custom-btn1" name="Clear" ng-click="clearData()"><i class="pg-close"></i> Clear</button>
                                    </div>
                                    <div class="clr"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>