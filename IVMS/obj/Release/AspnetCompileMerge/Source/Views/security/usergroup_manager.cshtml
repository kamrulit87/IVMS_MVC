@model List<SAL.Security.SecurityModel>
@{
    ViewBag.Title = "User Group Manager Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section section_top
{
    <link href="~/Content/built_in/assets/plugins/jquery-datatable/media/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
}

<div class="container-fluid container-fixed-lg">
    <div class="panel panel-transparent pt4">
        <div class="panel-heading">
            <div class="panel-title">User Group Manager Information</div>
            <div class="pull-right m-t-15">
                <div class="col-xs-6">
                    <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
                </div>
                <div class="col-xs-6">
                    <div id="show-modal" class="btn btn-success custom-btn2">
                        <i class="fa fa-plus pr1"></i>
                        @Html.ActionLink("Add New", "usergroup_manager_create", null, new { @class = "" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div style="margin-left:0px; color:#ff6a00; font-size:16px; margin-bottom:10px;" class="viewbag-validation">@ViewBag.Validation</div>
            <table class="table table-striped" id="tableWithSearch">
                <thead>
                    <tr>
                        <th style="display:none;">PasswordId</th>
                        <th style="display:none;">UserGroupId</th>
                        <th style="padding-left:12px !important">Group</th>
                        <th>User</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class=" odd gradex">
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.ObjPasswordCore.PasswordId)
                            </td>
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.ObjUserGroup.UserGroupId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ObjUserGroup.UserGroupHead)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ObjPasswordCore.UserId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ObjPasswordCore.UserName)
                            </td>
                            <td>
                                @if (item.ObjPasswordCore.PasswordMode == 0)
                                {
                                    <p>Active</p>
                                }
                                else
                                {
                                    <p>Inactive</p>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ObjPasswordCore.PassworDateLine)
                            </td>
                            <td width="80">
                                @Html.ActionLink("Edit", "usergroup_manager_create", new { id = item.ObjPasswordCore.PasswordId, UserGroupId = item.ObjUserGroup.UserGroupId }, new { @class = "edit" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section section_footer
{
    <script src="~/Content/built_in/assets/plugins/jquery-datatable/media/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/built_in/assets/plugins/jquery-datatable/media/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/built_in/assets/js/datatables.js" type="text/javascript"></script>
 }