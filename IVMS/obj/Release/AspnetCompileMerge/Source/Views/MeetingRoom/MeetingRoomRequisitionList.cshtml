<div class="panel panel-transparen"style="background-color:#f3f1f100!important;" ng-controller="meetingRoomController" ng-init="getMeetingReq2()">
    <div class="panel-heading">
        <div class="panel-title">
            Meeting Room Requisition List
        </div>

        <div class="pull-right m-t-15">
            <div id="show-modal" class="btn btn-success">
                <i class="fa fa-plus pr1"></i>
                <a href="#!/MeetingRoomReqList" ng-click="removeCookies()">Add New</a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="panel-body">
        <div>
            <input id="myInput" style="width: 200px;float:right;" placeholder="Search" class="input-sm form-control topsearch" type="search" autofocus />
        </div>
        <table id="tableWithSearch" st-table="data" st-safe-src="reqList2" class="table table-striped table-hover">
            <thead>

                <tr>
                    <th>M.Room No</th>
                    <th>Requisition By</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th >Purpose</th>
                    <th>Participants</th>
                    @*<th style="text-align:right">Action</th>*@
                </tr>
            </thead>
            <tbody id="myTable">
                <tr ng-repeat="row in data">
                    <td>{{row.RoomNo}}</td>
                    <td>{{row.EmpName}}</td>
                    <td>{{row.RequiredDate}}</td>
                    <td>{{row.FromTime}}-{{row.ToTime}}</td>
                    <td>{{row.Remarks}}</td>
                    <td>
                        <a class="btn btn-sm btn-success" ng-click="modalOpen(row)">View</a>
                    </td>
                    @*<td align="right">
                        <a class="btn btn-sm btn-success" ng-click="editRowRoomReq(row)">Edit</a>
                    </td>*@

                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" class="text-right">
                        <div st-pagination="" st-items-by-page="itemsByPage"></div>
                    </td>
                </tr>
            </tfoot>
        </table>


        <!-- Modal start -->
        <div class="modal fade stick-up" my-modal my-modal-is-open="isModal2" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-hidden="true">
            <div class="modal-dialog" style="width: 800px;top: 60px;">
                <div class="modal-content">
                    <div class="modal-header clearfix text-left">
                        <button type="button" class="close" ng-click="modalClose2()" aria-hidden="true">
                            <i class="pg-close fs-14"></i>
                        </button>
                        <div class="row bold padding-10">Meeting Room Participant:</div>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30">
                                <div ng-show="msgShow">
                                    <p style="font-weight: bold; color: red; font-size: 18px; text-align: center; padding: 30px;">No participant was selected for this meeting</p>
                                </div>
                                
                                <table id="tableWithSearch" st-table="req" st-safe-src="reqList" class="table table-striped" ng-show="dataShow">
                                    <thead>
                                        <tr>
                                            <th>Employee Name</th>
                                            <th>Department</th>
                                            @*<th>Dsignation</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr data-ng-repeat="row in meetingRoomParticipantList">
                                            <td>{{row.EmpName}}</td>
                                            <td>{{row.DepartmentName}}</td>
                                            @*<td>{{row.DesignationName}}</td>*@
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>

                    </div>

                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>



        <!-- Modal start Room Req-->
        <div class="modal fade stick-up" my-modal my-modal-is-open="isModal" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-hidden="true">
            <div class="modal-dialog" style="width: 1000px;top: 60px;">
                <div class="modal-content">
                    <div class="modal-header clearfix text-left">
                        <button type="button" class="close" ng-click="modalClose()" aria-hidden="true">
                            <i class="pg-close fs-14"></i>
                        </button>
                        <div class="row bold padding-10">Meeting Room Requisition :</div>
                    </div>
                    <div class="modal-body">
                        <form name="meetingRoomReqForm" ng-init="loadReqDropdowns();loadMeetingRoom()">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                                    <input type="text" class="form-control hidden" ng-model="meetingRoomReq.RequisitionID" placeholder="" readonly />

                                    <div class="form-group">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Room No</label>
                                            <div class="right-col">
                                                <select class="form-control" ng-model="meetingRoomReq.MeetingRoomID"
                                                        ng-options="room.MeetingRoomID as room.RoomNo for room in meetingRoomList" disabled="disabled">
                                                    <option value=""> Select Room No </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group hidden">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Employee</label>
                                            <div class="right-col">
                                                <select class="form-control" ng-model="meetingRoomReq.RequisitionBy"
                                                        ng-options="emp.EmployeeID as emp.EmpName for emp in employeeList">
                                                    <option value=""> --Select Employee-- </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Required Date</label>
                                            <div class="right-col">
                                                <div id="datepicker-component" class="input-group date">
                                                    <input type="text" class="form-control" ng-model="meetingRoomReq.RequiredDate" required ng-change="getMeetingReq()" />
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@

                                    <div class="form-group">
                                        <div class="form-inner13">
                                            <label for="ExpertiseAreaName" class="left-col control-label">Required Date</label>
                                            <div class="right-col">
                                                <div id="datepicker-component" class="input-group date">
                                                    <input type="text" class="form-control date_picker1" ng-model="meetingRoomReq.RequiredDate" required ng-change="getMeetingReq()">
                                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                </div>
                                            </div>
                                            <div class="clr"></div>
                                        </div>
                                    </div>

                                    <div class="time_group">
                                        <div class="form-group">
                                            <div class="form-inner13">
                                                <label class="left-col control-label">From Time</label>
                                                <div class="right-col">
                                                    <div class="input-group bootstrap-timepicker">
                                                        <input class="form-control " ng-model="meetingRoomReq.FromTime" ng-model-onblur clockpicker />
                                                        <span class="input-group-addon"><i class="pg-clock"></i></span>
                                                    </div>

                                                </div>
                                                
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-inner13">
                                                <label class="left-col control-label">To Time</label>
                                                <div class="right-col">
                                                    <input id="ToTime" class="form-control" ng-model="meetingRoomReq.ToTime" ng-change="checkTime(meetingRoomReq)">
                                                    @*<div class="input-group bootstrap-timepicker">
                                                        <input class="form-control " ng-model="meetingRoomReq.ToTime" ng-model-onblur ng-change="checkTime(meetingRoomReq)" clockpicker />
                                                        <span class="input-group-addon"><i class="pg-clock"></i></span>
                                                    </div>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Remarks</label>
                                            <div class="right-col">
                                                <textarea rows="3" class="form-control" ng-model="meetingRoomReq.Remarks" required></textarea>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                                    <table id="tableWithSearch" st-table="req" st-safe-src="reqList" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th st-sort="OrderNO">Remarks</th>
                                                <th st-sort="SupplierName">Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr data-ng-repeat="row in req">
                                                <td>{{row.Remarks}}</td>
                                                <td>{{row.Time}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30" style="margin-top: 20px;">
                                <div class="div-info bold padding-10">Participant</div>
                                <table st-table="department" st-safe-src="departmentList" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Department</th>
                                            <th>Employee</th>
                                            <th>Designation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="detail in dataDtls">
                                            <td>
                                                <select2 class="width-350" style="width:150px" ng-model="detail.DepartmentID" s2-options="dep.DepartmentID as dep.DepartmentName for dep in departmentList"
                                                         required placeholder="--Select Department--">
                                                </select2>
                                            </td>
                                            <td>
                                                <select2 class="width-350" style="width:150px" ng-model="detail.EmployeeID"
                                                         s2-options="emp.EmployeeID as emp.EmpName for emp in employeeList" placeholder="--Select Employee--" required>

                                                </select2>
                                            </td>

                                            <td>
                                                <select2 style="width:150px" placeholder="--Select Designation--" ng-model="detail.DesignationID" s2-options="store.DesignationID as store.DesignationName for store in designationList" required>

                                                </select2>
                                            </td>


                                            <td align="right">
                                                <button type="button" ng-click="removeRow($index, detail)" class="btn btn-danger btn-xs">
                                                    <i class="fa fa-close"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="land_name_input expense">
                                            <td>
                                                <select2 class="width-350" style="width:150px" ng-model="detail.DepartmentID" s2-options="dep.DepartmentID as dep.DepartmentName for dep in departmentList"
                                                         required ng-change="getDepWiseEmployee()" placeholder="--Select Department--">
                                                </select2>
                                            </td>
                                            <td>
                                                <select2 class="width-350" style="width:150px" ng-model="detail.EmployeeID"
                                                         s2-options="emp.EmployeeID as emp.EmpName for emp in depEmployeeList" placeholder="--Select Employee--" ng-change="designationbyEmp(detail.EmployeeID)" required>

                                                </select2>
                                            </td>

                                            <td>
                                                <select2 style="width:150px" placeholder="--Select Designation--" ng-model="detail.DesignationID" s2-options="store.DesignationID as store.DesignationName for store in designationListsbyEmp" required>

                                                </select2>
                                            </td>

                                            <td align="right">
                                                <button type="button" ng-click="addStoreReqRow(detail)" class="btn btn-primary btn-xs">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </form>


                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success custom-btn1" ng-disabled="disabledSaveBtn" type="button" ng-click="saveMeetingReqRoom()">Submit</button>
                        <button class="btn btn-default custom-btn1" name="Clear" type="button" ng-click="clearReqData()"><i class="pg-close"></i> Clear</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>
   
</div>
